#!/usr/bin/make -f

%:
	dh $@

# PrzykÅ‚ad konfiguracji dla maÅ‚ego projektu
export DEB_BUILD_MAINT_OPTIONS = hardening=+all
export DEB_CFLAGS_MAINT_APPEND  = -Wall -pedantic
export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed

override_dh_auto_configure:
	# Tutaj ewentualne dodatkowe kroki konfiguracji
	@echo "ğŸ”§ Configuring build..."

override_dh_auto_build:
	# Kompilacja projektu
	$(MAKE)
	@echo "ğŸ—ï¸  Building completed"

override_dh_auto_install:
	# UtwÃ³rz docelowe katalogi
	install -d debian/nas-web/var/log/nas-web
	install -d debian/nas-web/etc/nas-web
	install -d debian/nas-web/usr/local/bin
	install -d debian/nas-web/lib/systemd/system
	
	# Zainstaluj plik wykonywalny
	cp -p dist/nas-web debian/nas-web/usr/local/bin/
	@echo "ğŸ“¦ Binary installed"
	
	# Zainstaluj usÅ‚ugÄ™ systemd
	install -m 644 debian/nas-web.service debian/nas-web/lib/systemd/system/
	@echo "ğŸ“‹ Systemd service installed"
	
	# SprawdÅº czy to upgrade czy nowa instalacja
	if [ -f debian/upgrade-not-first-install ]; then \
		echo "ğŸ”„ Upgrade installation - preserving existing config"; \
	else \
		echo "ğŸ†• New installation - installing default config"; \
		install -m 644 debian/config/nas-web.conf.default debian/nas-web/etc/nas-web/; \
		echo "ğŸ“„ Default config installed"; \
	fi

override_dh_usrlocal:

# Nowoczesna obsÅ‚uga systemd - zgodna z compat 13
override_dh_installinit:
	dh_installinit --no-start --no-enable
	@echo "â¯ï¸  Systemd service configured (not started/enabled by default)"

# Czyszczenie podczas budowania nowego pakietu
override_dh_clean:
	dh_clean
	rm -f debian/upgrade-not-first-install
	@echo "ğŸ§¹ Clean completed"

# Skrypt preinst - wykonywany przed instalacjÄ…
override_dh_installdeb:
	dh_installdeb
	# UtwÃ³rz plik do Å›ledzenia upgradÃ³w
	touch debian/upgrade-not-first-install
	@echo "ğŸ“ Installation tracking setup"